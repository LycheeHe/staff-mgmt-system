{
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "gui"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@module/*": [
        "./src/module/*"
      ],
      "@service/*": [
        "./src/service/*"
      ],
      "@route/*": [
        "./src/route/*"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}